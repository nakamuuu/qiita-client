<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Qiita" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Qiita.Light">
        <item name="android:statusBarColor">@color/status_bar_light</item>
    </style>

    <!-- ThemeOverlay -->

    <style name="ThemeOverlay.Qiita.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/secondary_text</item>
    </style>

    <style name="ThemeOverlay.Qiita.ActionBar.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/primary_dark</item>
    </style>
</resources>
